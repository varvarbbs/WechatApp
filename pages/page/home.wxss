/* pages/page/home.wxss */
@import "../../template/ShopCell.wxss";
@import "../../template/ProductCell.wxss";

.adImage{
  width: 100vw;
  height: 49vw;
}

.menuPanel{
  display: flex;
}

.menuPanel view{
  height: 28vw;
  width: 25vw;
  display:flex;
  align-items: center;
  flex-direction: column;
}

.menuPanel view image{
  height: 12vw;
  width: 12vw;
  margin-top: 5vw;
}

.menuPanel view text{
  text-align: center;
  width: 100%;
  font-size: 12px;
  margin-top: 5px;
  color: #454545;
}

.homeShopHead{
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

.homeShopHead .head{
  width: 44.4vw;
  height: 9.2vw;
}

.homeShopBody{
  display: flex;
  background-color: #f5f5f5;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
}


