.shopcell{
  width: 49vw;
  height: 51vw;
  background-color: white;
  margin-bottom: 2vw;
  flex-direction: column;
}

.shopcell image
{
  width: 100%;
  height: 35vw;
}

.shopcell .content{
  position: relative;
  height: 16vw;
}

.shopcell .content image{
  width: 12.9vw;
  height: 12.9vw;
  position: absolute;
  left: 1.8vw;
  border-style: solid;
  border-width: 1px;
  border-color: #d1d1d1;
}

.shopcell .name{
  font-size: 13px;
  color: #333333;
  position: absolute;
  left: 16.5vw;
  top:-0.5vw;
}

.shopcell .address{
  font-size: 9px;
  color: #454545;
  position: absolute;
  left: 16.5vw;
  top: 5vw;
}